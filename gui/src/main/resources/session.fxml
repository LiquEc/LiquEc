<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane styleClass="main" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8.0.131" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.liquec.gui.controller.SessionController">
    <center>
        <BorderPane>
         <top>
                <GridPane fx:id="basicDataGridPane" hgap="15.0" styleClass="wrapperGridPaneContent" BorderPane.alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints hgrow="ALWAYS" />
                  <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="ALWAYS" />
                    </rowConstraints>
                    <children>
                        <GridPane fx:id="informationGridPane" styleClass="area" vgap="10.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="120.0" minWidth="120.0" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="ALWAYS" />
                                <RowConstraints vgrow="ALWAYS" />
                            </rowConstraints>
                            <children>
                                <Label styleClass="fieldLabel" text="Project Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <TextField fx:id="textFieldProjectName" alignment="CENTER_RIGHT" styleClass="textField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <Label styleClass="fieldLabel" text="Organization:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <TextField fx:id="textFieldOrganization" alignment="CENTER_RIGHT" styleClass="textField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            </children>
                        </GridPane>
                        <GridPane fx:id="siteConditionsGridPane" styleClass="area" vgap="10.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="230.0" minWidth="230.0" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="ALWAYS" />
                                <RowConstraints vgrow="ALWAYS" />
                            </rowConstraints>
                            <children>
                                <Label styleClass="fieldLabel" text="Peak Ground Aceleration (PGA):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <TextField fx:id="textFieldPeakGroundAceleration" alignment="CENTER_RIGHT" styleClass="textField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <Label styleClass="fieldLabel" text="Earthquake Magnitude (MW):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <TextField fx:id="textFieldEarthquakeMagnitude" alignment="CENTER_RIGHT" styleClass="textField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            </children>
                        </GridPane>
                    </children>
                </GridPane>
         </top>
         <center>
                <BorderPane BorderPane.alignment="CENTER">
                    <center>
                        <BorderPane styleClass="area" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets bottom="0" left="0" right="0" top="15" />
                            </BorderPane.margin>
                            <top>
                                <GridPane fx:id="geothechnicalPropertiesGridPane" styleClass="paddingBottom" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" maxWidth="260.0" minWidth="260.0" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints vgrow="ALWAYS" />
                                    </rowConstraints>
                                    <children>
                                        <Label styleClass="fieldLabel" text="Ground Water Table Depth (GWT):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                        <TextField fx:id="textFieldGroundWaterTableDepth" alignment="CENTER_RIGHT" styleClass="textField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    </children>
                                </GridPane>
                            </top>
                            <center>
                                <TableView styleClass="table" BorderPane.alignment="CENTER">
                                    <columns>
                                        <TableColumn fx:id="startDepthTableColumn" editable="false" maxWidth="70.0" minWidth="70.0" sortable="false">
                                            <graphic>
                                                <Label alignment="CENTER" text="Start Depth (m)" textAlignment="CENTER" wrapText="true" />
                                            </graphic>
                                        </TableColumn>
                                        <TableColumn fx:id="finalDepthTableColumn" editable="false" maxWidth="70.0" minWidth="70.0" sortable="false">
                                            <graphic>
                                                <Label alignment="CENTER" text="Final Depth (m)" textAlignment="CENTER" wrapText="true" />
                                            </graphic>
                                        </TableColumn>
                                        <TableColumn fx:id="soilTypeTableColumn" editable="false" sortable="false">
                                            <graphic>
                                                <Label alignment="CENTER" text="Soil Type" textAlignment="CENTER" wrapText="true" />
                                            </graphic>
                                        </TableColumn>
                                        <TableColumn fx:id="soilUnitWeightTableColumn" editable="false" sortable="false" text="Soil Unit Weight (KN/m3)">
                                            <columns>
                                                <TableColumn fx:id="aboveGWTTableColumn" editable="false" minWidth="50.0" sortable="false">
                                                    <graphic>
                                                        <Label alignment="CENTER" text="Above GWT" textAlignment="CENTER" wrapText="true" />
                                                    </graphic>
                                                </TableColumn>
                                                <TableColumn fx:id="belowGWTTableColumn" editable="false" minWidth="50.0" sortable="false">
                                                    <graphic>
                                                        <Label alignment="CENTER" text="Below GWT" textAlignment="CENTER" wrapText="true" />
                                                    </graphic>
                                                </TableColumn>
                                            </columns>
                                        </TableColumn>
                                        <TableColumn fx:id="finesContentTableColumn" editable="false" sortable="false">
                                            <graphic>
                                                <Label alignment="CENTER" text="Fines Content (%)" textAlignment="CENTER" wrapText="true" />
                                            </graphic>
                                        </TableColumn>
                                        <TableColumn fx:id="liquefactionTableColumn" editable="false" sortable="false">
                                            <graphic>
                                                <Label alignment="CENTER" text="Liquefaction" textAlignment="CENTER" wrapText="true" />
                                            </graphic>
                                        </TableColumn>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </center>
                            <bottom>
                                <GridPane fx:id="layersButtonsGridPane" styleClass="paddingTop" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints vgrow="ALWAYS" />
                                    </rowConstraints>
                                    <children>
                                        <HBox alignment="TOP_RIGHT" styleClass="buttonsHBox" BorderPane.alignment="CENTER">
                                            <children>
                                                <Button mnemonicParsing="false" styleClass="buttonAdd" text="Add">
                                                    <tooltip>
                                                        <Tooltip text="Add a new layer" />
                                                    </tooltip>
                                                    <graphic>
                                                        <MaterialIconView styleClass="buttonAddIcon" />
                                                    </graphic>
                                                    <opaqueInsets>
                                                        <Insets />
                                                    </opaqueInsets>
                                                </Button>
                                                <Button mnemonicParsing="false" styleClass="buttonRemove" text="Remove">
                                                    <tooltip>
                                                        <Tooltip text="Remove the last layer" />
                                                    </tooltip>
                                                    <graphic>
                                                        <MaterialIconView styleClass="buttonRemoveIcon" />
                                                    </graphic>
                                                </Button>
                                            </children>
                                        </HBox>
                                    </children>
                                </GridPane>
                            </bottom>
                        </BorderPane>
                    </center>
                    <right>
                        <BorderPane styleClass="area" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets bottom="0" left="15" right="15" top="15" />
                            </BorderPane.margin>
                            <top>
                                <GridPane fx:id="standardPenetrationTestGridPane" styleClass="paddingBottom" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints vgrow="ALWAYS" />
                                    </rowConstraints>
                                    <children>
                                        <Label styleClass="fieldLabel" text="Standard Penetration Test (SPT):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                    </children>
                                </GridPane>
                            </top>
                            <center>
                                <TableView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                    <columns>
                                        <TableColumn editable="false" sortable="false" text="Depth (m)" />
                                        <TableColumn editable="false" sortable="false" text="SPT Blow Counts (N)" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </center>
                            <bottom>
                                <GridPane fx:id="standardPenetrationTestButtonsGridPane" styleClass="paddingTop" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints vgrow="ALWAYS" />
                                    </rowConstraints>
                                    <children>
                                        <HBox alignment="TOP_RIGHT" styleClass="buttonsHBox" BorderPane.alignment="CENTER">
                                            <children>
                                                <Button mnemonicParsing="false" styleClass="buttonAdd" text="Add">
                                                    <tooltip>
                                                        <Tooltip text="Add a new layer" />
                                                    </tooltip>
                                                    <graphic>
                                                        <MaterialIconView styleClass="buttonAddIcon" />
                                                    </graphic>
                                                </Button>
                                                <Button mnemonicParsing="false" styleClass="buttonRemove" text="Remove">
                                                    <tooltip>
                                                        <Tooltip text="Remove the last layer" />
                                                    </tooltip>
                                                    <graphic>
                                                        <MaterialIconView styleClass="buttonRemoveIcon" />
                                                    </graphic>
                                                </Button>
                                            </children>
                                        </HBox>
                                    </children>
                                </GridPane>
                            </bottom>
                        </BorderPane>
                    </right>
                </BorderPane>
         </center>
        </BorderPane>
    </center>
    <right>
        <Pane fx:id="graphicPane" styleClass="area" maxWidth="260.0" minWidth="260.0" BorderPane.alignment="CENTER" />
    </right>
</BorderPane>
