<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<Pane fx:id="aboutDialogue" styleClass="about" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.liquec.gui.controller.AboutController">
    <children>
        <BorderPane>
            <top>
                <HBox>
                    <children>
                        <Text styleClass="title" text="Liqu" />
                        <Text styleClass="title" text="Ec" />
                    </children>
                </HBox>
            </top>
            <right>
                <Button fx:id="buttonClose" mnemonicParsing="false" text="Close" BorderPane.alignment="BOTTOM_RIGHT" />
            </right>
            <left>
                <VBox>
                    <children>
                        <Label text="LiquEc is Open Source Software,&#10;published under the GNU Licence, Version 2.0." />
                        <Label fx:id="labelVersion" text="LiquEc Version: %s." />
                        <Label text="Copyright (c) 2018 José Luis Pastor Navarro &amp; Pablo Benito González." />
                        <Hyperlink fx:id="linkWebsite" styleClass="website" text="https://personal.ua.es/es/">
                            <graphic>
                                <MaterialIconView styleClass="websiteIcon" />
                            </graphic>
                        </Hyperlink>
                    </children>
                </VBox>
            </left>
        </BorderPane>
    </children>
</Pane>
